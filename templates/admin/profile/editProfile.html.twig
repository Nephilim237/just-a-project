{% extends 'admin/admin.html.twig' %}

{% block title %}Mettre à jour {{ app.user.fullName }}{% endblock %}

{% block body %}

    <section>
        <div class="row me-0">
            {{ include('partials/_profileLeft.html.twig') }}

            <div class="col-md-9 cc-profile-right">
                <div class="container-fluid py-3">

                    <div class="row">
                        <div class="col-md-6 col-sm-10 mx-auto">
                            <h5>Mettre à jour vos informations</h5>
                            {{ form_start(form) }}
                                <div class="mb-3">
                                    {{ form_row(form.name)}}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.firstname)}}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.username)}}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.email)}}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.image)}}
                                </div>
                                <button type="submit" class="cc-btn-big cc-btn cc-btn-outline">Mettre à jour</button>
                            {{ form_end(form) }}
                        </div>

                        <div class="col-md-6 col-sm-10 mx-auto">
                            <div class="row">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% extends 'admin/admin.html.twig' %}

{% block title %}Ajouter une catégorie.{% endblock %}

{% block body %}
    {{ include('partials/_adminHeader.html.twig') }}
    <section>
        <div class="row me-0">
            {{ include('partials/_profileLeft.html.twig') }}

            <div class="col-md-9 cc-profile-right">
                <div class="container-fluid py-3">
                    <div class="row mx-0">
                        <div class="col-md-6 col-sm-10 mx-auto">
                            <h5>Ajouter une catégorie.</h5>
                            {% for message in app.flashes('success') %}
                                "<div class='alert alert-success text-center fs-5 col-md-10 mx-auto'>{{ message }}</div>"
                            {%  endfor %}
                            {{ form_start(form) }}
                                <div class="mb-3">
                                    {{ form_row(form.title) }}
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

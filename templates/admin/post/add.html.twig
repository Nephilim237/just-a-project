{% extends 'admin/admin.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block body %}
    {{ include('partials/_adminHeader.html.twig') }}
    <section>
        <div class="row me-0">
            {{ include('partials/_profileLeft.html.twig') }}

            <div class="col-md-9 cc-profile-right">
                <div class="container-fluid py-3">
                    <div class="row mx-0">
                        <div class="col-sm-10 mx-auto">
                            <h5>Ajouter un article.</h5>

                            {{ form_start(form) }}
                                <div class="mb-3">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.content) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.category) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.images) }}
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="cc-btn cc-btn-big cc-btn-outline">Publier <i
                                                class="ri-add-circle-line"></i></button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
